{{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                {{!--
                <span class="badge badge-success">2</span> --}}
                <strong>{{this.item.title}}</strong>
                <div>Quantity: {{this.qty}}</div>
                <span class="badge badge-success">Price: ${{this.price}}</span>
                <div class="btn-group dropdown pull-right">
                    <button class="btn btn-primary btn-sx dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                        type="button">Action
                        <sapn class="caret"></sapn>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/reduce/{{this.item._id}}" class="dropdown-item">Reduce By 1</a>
                        </li>
                        {{!-- <li>
                            <a href="/remove/{{this.item._id}}" class="dropdown-item">Remove All</a>
                        </li> --}}
                    </ul>
                </div>
            </li>
            {{/each}}

        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: ${{totalPrice}}</strong>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>

{{else}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Items In Cart</h2>
    </div>
</div>
{{/if}}